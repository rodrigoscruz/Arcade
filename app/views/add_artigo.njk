{% extends "layout_artigo.njk" %}
{% block pagina %}
<h1 class="mb-4">Cadastro de Criadores</h1>

<div class="col-md-6">
    <form action="/artigo" method="post">
        <div class="form-group">
            <label for="id_criador">Nome Criador</label>
            <input type="text" class="form-control" name="nome_criador" id="nome_criador" placeholder="Rodrick, Samuka">
        </div>
        
        <div class="form-group">
            <label for="estrelas">Categoria</label>
            <input type="text" class="form-control" name="categoria" id="categoria" placeholder="siclano123">
        </div>

        <div class="form-group">
            <label for="estrelas">Titulo</label>
            <input type="text" class="form-control" name="titulo" id="titulo" placeholder="siclaninho">
        </div>

        <div class="form-group">
            <label for="estrelas">Corpo</label>
            <input type="text" class="form-control" name="corpo" id="corpo" placeholder="siclano123">
        </div>

        <div class="form-group">
            <label for="estrelas">Imagem</label>
            <input type="text" class="form-control" name="img_url" id="img_url" placeholder="siclaninho">
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
        
        <a href="/artigo" class="btn btn-secondary">Voltar</a>
    </form>
</div>
{% endblock %}