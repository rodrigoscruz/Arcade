{% extends "layout_login.njk" %}
{% block pagina %}
<h1 class="mb-4">Criar Artigo</h1>

<div class="col-md-6">
    <form action="/artigo" method="post">
        <div class="form-group">
            <label for="nome_criador">Nome do criador</label>
            <input type="text" class="form-control" name="nome_criador" id="nome_criador" placeholder="Rodrick, Samuka...">
        </div>
        
        <div class="form-group">
            <label for="estrelas">Data</label>
            <input type="text" class="form-control" name="data" id="data" placeholder="2001-09-11">
        </div>


        <div class="form-group">
            <label for="estrelas">Categoria</label>
            <input type="text" class="form-control" name="categoria" id="categoria" placeholder="Games, Tec...">
        </div>

        <div class="form-group">
            <label for="estrelas">Titulo</label>
            <input type="text" class="form-control" name="titulo" id="titulo" placeholder="Lolzinho">
        </div>

        <div class="form-group">
            <label for="estrelas">Corpo</label>
            <textarea type="text" class="form-control" name="corpo" id="corpo" cols="30" rows="10" placeholder="Lolzin de boas..."></textarea>
        </div>

        <div class="form-group">
            <label for="estrelas">Imagem</label>
            <input type="file" class="form-control" name="img_url" id="img_url" placeholder="http/cloludinary/123">
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
        
        <a href="/artigo" class="btn btn-secondary">Voltar</a>
    </form>
</div>
{% endblock %}