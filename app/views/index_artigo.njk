{% extends "layout_artigo.njk" %}
{% block pagina %}

    <div class="parent white">
    <div class="card yellow">
      <h3>Title - Card 1</h3>
      <p contenteditable>Medium length description with a few more words here.</p>
      <div class="visual pink"></div>
    </div>
    <div class="card yellow">
      <h3>Title - Card 2</h3>
      <p contenteditable>Long Description. Lorem ipsum dolor sit, amet consectetur adipisicing elit.</p>
      <div class="visual blue"></div>
    </div>
    <div class="card yellow">
      <h3>Title - Card 3</h3>
      <p contenteditable>Short Description.</p>
      <div class="visual green"></div>
    </div>
  </div>


    <h1>Lista de Artigos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome Criador</th>
                <th>Título</th>
                <th>Texto</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for artigo in artigos %}
            <tr>
                <td>{{artigo.id}}</td>
                <td>{{artigo.nome_criador}}</td>
                <td>{{artigo.titulo}}</td>
                <td>{{artigo.corpo}}</td>
                <td>
                    <a href="/editartigo/{{artigo.id}}" class="btn btn-primary">Editar</a>
                    <a href="/showartigo/{{artigo.id}}" class="btn btn-primary">Visualizar</a>
                    <button class="btn btn-danger" onclick="event.preventDefault(); document.getElementById('logout-form-{{artigo.id}}').submit();">Excluir
                    </button>
                </td>

                <form id="logout-form-{{artigo.id}}" action="/deleteartigo/{{artigo.id}}" method="POST" class="d-none">
                    <input type="hidden" name="_method" value="DELETE" />
                </form>

            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}