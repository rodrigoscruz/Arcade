{% extends "layout_video.njk" %}
{% block pagina %}

    <h1>Lista de Vídeos</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome criador</th>
                <th>Link</th>
                <th>Texto</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for video in videos %}
            <tr>
                <td>{{video.id}}</td>
                <td>{{criador.nome}}</td>
                <td>{{video.link}}</td>
                <td>{{video.texto}}</td>
                <td>
                    <a href="/editvideo/{{video.id}}" class="btn btn-primary">Editar</a>
                    <button class="btn btn-danger" onclick="event.preventDefault(); document.getElementById('logout-form-{{video.id}}').submit();">Excluir
                    </button>
                </td>

                <form id="logout-form-{{video.id}}" action="/deletevideo/{{video.id}}" method="POST" class="d-none">
                    <input type="hidden" name="_method" value="DELETE" />
                </form>

            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}