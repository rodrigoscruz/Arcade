{% extends "layout.njk" %}
{% block pagina %}

    <h1>Lista de Usuários</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Senha</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for usuario in usuarios %}
            <tr>
                <td>{{usuario.id}}</td>
                <td>{{usuario.nome}}</td>
                <td>{{usuario.email}}</td>
                <td>{{usuario.senha}}</td>
                <td>
                    <a href="/edit/{{usuario.id}}" class="btn btn-primary">Editar</a>
                    <button class="btn btn-danger" onclick="event.preventDefault(); document.getElementById('logout-form-{{usuario.id}}').submit();">Excluir
                    </button>
                </td>

                <form id="logout-form-{{usuario.id}}" action="/delete/{{usuario.id}}" method="POST" class="d-none">
                    <input type="hidden" name="_method" value="DELETE" />
                </form>

            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}