{% extends "layout_cria.njk" %}
{% block pagina %}

    <h1>Lista de Usuários</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>E-mail</th>
                <th>Senha</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for criador in criadores %}
            <tr>
                <td>{{criador.id}}</td>
                <td>{{criador.nome}}</td>
                <td>{{criador.email}}</td>
                <td>{{criador.senha}}</td>
                <td>
                    <a href="/editcria/{{criador.id}}" class="btn btn-primary">Editar</a>
                    <button class="btn btn-danger" onclick="event.preventDefault(); document.getElementById('logout-form-{{criador.id}}').submit();">Excluir
                    </button>
                </td>

                <form id="logout-form-{{criador.id}}" action="/deletecria/{{criador.id}}" method="POST" class="d-none">
                    <input type="hidden" name="_method" value="DELETE" />
                </form>

            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}