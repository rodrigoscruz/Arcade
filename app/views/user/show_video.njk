{% extends "layout.njk" %}
{% block pagina %}

<div style="margin-left:15%;padding:1px 16px;height:1000px;">

<h1 class="mb-4">{{video.titulo}}</h1>

<div class="col-md-6">
    
    <h4 class="mb-4">{{video.data}}</h4>
    <h4 class="mb-4">{{video.categoria}}</h4>
    <h4 class="mb-4">{{video.texto}}</h4>
    <h4 class="mb-4">{{video.nome_criador}}</h4>    
    <a href="{{video.link}}">YouTube</a>
    
</div>

</div>
{% endblock %}