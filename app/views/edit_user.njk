        </div>
        <div class="form-group">
            <label for="senha">Senha</label>
            <input type="text" class="form-control" name="senha" id="senha" placeholder="siclano123" value="{{usuario.senha}}">
        </div>
        <button type="submit" class="btn btn-primary">Atualizar</button>
            <a href="/user" class="btn btn-default">Voltar</a>
        </form>
    </div>
    {% endblock %}