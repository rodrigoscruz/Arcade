<div class="col-md-6">
    <form action="/edit/{{usuario.id}}" method="post">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
            <label>Id</label>
            <p class="form-control" id="nome" placeholder="{{usuario.id}}"></p>
