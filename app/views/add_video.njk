{% extends "layout_video.njk" %}
{% block pagina %}
<h1 class="mb-4">Cadastro de Criadores</h1>

<div class="col-md-6">
    <form action="/video" method="post">
        <div class="form-group">
            <label for="id_criador">ID Criador</label>
            <input type="text" class="form-control" name="id_criador" id="id_criador" placeholder="3">
        </div>
        
        <div class="form-group">
            <label for="estrelas">Link</label>
            <input type="text" class="form-control" name="link" id="link" placeholder="siclano123">
        </div>

        <div class="form-group">
            <label for="estrelas">Texto</label>
            <input type="text" class="form-control" name="texto" id="texto" placeholder="siclaninho">
        </div>

        
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        
        <a href="/video" class="btn btn-secondary">Voltar</a>
    </form>
</div>
{% endblock %}